link: https://leetcode.com/problems/remove-duplicates-from-sorted-array-ii/description/?envType=study-plan-v2&envId=top-interview-150
code:
class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
        if(nums.size()==1)  return 1;
        int i=0;
        int j=1;
        int count=1;
        while(j<nums.size()){
            if(nums[i]==nums[j]){
                if(count<2){
                    count++;
                    int indx=i+1;
                int temp=nums[indx];
                nums[indx]=nums[j];
                nums[j]=temp;
                    i++;
                    j++;
                }
                else{
                    j++;
                }
            }
            else{
                count=1;
                int indx=i+1;
                int temp=nums[indx];
                nums[indx]=nums[j];
                nums[j]=temp;
                i++;
                j++;
            }
        }
        return i+1;
    }
};
